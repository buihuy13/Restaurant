    email buiquochuytd@gmail.com
    debug
}

localhost:8443 {

    tls internal

    log {
        output stdout
        format console
        level INFO
    }

    @api_routes {
        path /api/*
        path /v3/api-docs/*
        path /api-docs/*
        path /oauth2/*
        path /login/*
        path /eureka/*
        path /ws/*
        path /socket.io/*
    }

    handle @api_routes {
        reverse_proxy api-gateway:8080
    }

    handle {
        reverse_proxy frontend:3000
    }
}